# Настройки приложения
APP_NAME=CreditAI
DEBUG=True
HOST=0.0.0.0
PORT=8000

# База данных
# Для SQLite (MVP):
DATABASE_URL=sqlite:///./credit_ai.db
# Для PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/credit_ai

# ИИ (Ollama)
OLLAMA_HOST=http://localhost:11434
# Рекомендуемая модель - лёгкая и быстрая:
OLLAMA_MODEL=qwen2.5:1.5b
OLLAMA_MODEL_TEXTS=qwen2.5:1.5b
# Альтернативы (если нужно больше мощности):
# OLLAMA_MODEL=qwen2.5:3b  # Более точная (RAM: 4GB)
# OLLAMA_MODEL=qwen2.5:7b  # Максимальная точность (RAM: 8GB)

# Битрикс24
BITRIX_WEBHOOK_URL=https://your-domain.bitrix24.ru/rest/1/webhook_code/
BITRIX_CLIENT_ID=
BITRIX_CLIENT_SECRET=

# Очередь задач
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Безопасность
SECRET_KEY=change-in-production

# Пути
UPLOAD_FOLDER=./uploads
OUTPUT_FOLDER=./output
TEMPLATES_FOLDER=./templates






